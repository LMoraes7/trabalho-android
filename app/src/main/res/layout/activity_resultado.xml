<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ResultadoActivity">

    <TextView
        android:id="@+id/viewNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome:"
        tools:layout_editor_absoluteX="76dp"
        tools:layout_editor_absoluteY="79dp" />

    <TextView
        android:id="@+id/viewMedia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Media:"
        app:layout_constraintTop_toBottomOf="@+id/txtNome"
        tools:layout_editor_absoluteX="76dp" />

    <TextView
        android:id="@+id/viewResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Resultado:"
        app:layout_constraintTop_toBottomOf="@+id/txtMedia"
        tools:layout_editor_absoluteX="76dp" />

    <TextView
        android:id="@+id/txtNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/viewNome"
        tools:layout_editor_absoluteX="76dp" />

    <TextView
        android:id="@+id/txtMedia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/viewMedia"
        tools:layout_editor_absoluteX="76dp" />

    <TextView
        android:id="@+id/txtResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/viewResultado"
        tools:layout_editor_absoluteX="76dp" />

    <Button
        android:id="@+id/btRecuperacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="92dp"
        android:onClick="recuperar"
        android:text="Recuperacao"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/txtResultado"
        tools:layout_editor_absoluteX="76dp" />
</androidx.constraintlayout.widget.ConstraintLayout>