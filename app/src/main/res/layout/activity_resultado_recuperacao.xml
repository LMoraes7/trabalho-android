<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ResultadoRecuperacaoActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nota recuperacao:"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="75dp" />

    <EditText
        android:id="@+id/txtNotaRecuperacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:layout_editor_absoluteX="40dp" />

    <TextView
        android:id="@+id/txtResultadoRecuperacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Resultado"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/btCalcularRecuperacao"
        tools:layout_editor_absoluteX="40dp" />

    <Button
        android:id="@+id/btCalcularRecuperacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Calcular"
        app:layout_constraintTop_toBottomOf="@+id/txtNotaRecuperacao"
        tools:layout_editor_absoluteX="40dp" />

    <TextView
        android:id="@+id/txtErrorRecuperacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="TextView"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/btCalcularRecuperacao"
        tools:layout_editor_absoluteX="155dp" />
</androidx.constraintlayout.widget.ConstraintLayout>